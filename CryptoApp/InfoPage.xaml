        <TextBlock HorizontalAlignment="Left" Margin="49,270,0,0" TextWrapping="Wrap" Text="Fully Diluted Market Cap" VerticalAlignment="Top"/>
        <TextBlock x:Name="Change_1h" HorizontalAlignment="Left" Margin="384,172,0,0" TextWrapping="Wrap" Text="0%" VerticalAlignment="Top" FontWeight="Bold"/>
