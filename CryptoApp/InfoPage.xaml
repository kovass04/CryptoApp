        <TextBlock x:Name="Change_7d" HorizontalAlignment="Left" Margin="871,172,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBlock x:Name="Volume_24h" HorizontalAlignment="Left" Margin="1128,172,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold" Width="148"/>
        <TextBlock x:Name="Market_cap" HorizontalAlignment="Left" Margin="473,219,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold" Width="156"/>
        <TextBlock x:Name="Fully_diluted_market_cap" HorizontalAlignment="Left" Margin="473,270,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontWeight="Bold" Width="158"/>
